@startuml
skinparam backgroundColor White
skinparam ActivityBackgroundColor White
skinparam ActivityBorderColor Black
skinparam ActivityDiamondBackgroundColor White
skinparam ActivityDiamondBorderColor Black
skinparam ArrowColor Black
skinparam PartitionBorderColor Black
skinparam PartitionBackgroundColor White
skinparam defaultFontSize 14

title Activity Diagram Manajemen Mahasiswa

|Admin|
start
:Tap Menu Mahasiswa;

|Sistem|
:Memuat Data Mahasiswa;
:Menampilkan Daftar Mahasiswa;

|Admin|
if (Aksi?) then (Search)
  :Ketik Kata Kunci;
  |Sistem|
  :Filter Mahasiswa;
else if (Aksi?) then (Tap Card)
  |Sistem|
  :Buka Modal CRUD;
  |Admin|
  if (Mode?) then (Edit)
    :Edit Data;
    |Sistem|
    :Simpan Perubahan;
  else (Delete)
    :Konfirmasi Hapus;
    |Sistem|
    :Hapus Mahasiswa;
  endif
else (Tap FAB)
  |Sistem|
  :Buka Modal Tambah;
  |Admin|
  :Input Data Baru;
  :Tap Simpan;
  |Sistem|
  :Simpan ke Database;
endif

stop

@enduml

