@startuml Activity Diagram - Dosen

title Activity Diagram: Alur Sistem Dosen

start

:Dosen membuka aplikasi;

:Login dengan NIP & Password;

if (Login berhasil?) then (ya)
  :Tampilkan Beranda Dosen;
  
  repeat
    :Pilih Menu;
    
    switch (Menu yang dipilih?)
    case (Jadwal)
      :Lihat jadwal mengajar;
      :Pilih hari;
      if (Jadwal hari ini?) then (ya)
        :Buka sesi absensi;
        :Mahasiswa dapat melakukan absensi;
      endif
      
    case (Akademik)
      :Pilih tab Nilai/KRS;
      if (Tab Nilai?) then (ya)
        :Pilih kelas;
        :Input nilai mahasiswa;
        :Simpan nilai;
      else (Tab KRS)
        :Lihat daftar KRS mahasiswa;
        if (Ada KRS pending?) then (ya)
          :Review detail KRS;
          if (Setujui?) then (ya)
            :Approve KRS;
          else (tidak)
            :Reject KRS dengan catatan;
          endif
        endif
      endif
      
    case (Absensi)
      :Lihat riwayat absensi kelas;
      if (Ada izin pending?) then (ya)
        :Review permintaan izin;
        if (Setujui?) then (ya)
          :Approve izin;
        else (tidak)
          :Reject izin;
        endif
      endif
      
    case (Profil)
      :Lihat/edit profil dosen;
      
    case (Logout)
      :Keluar dari aplikasi;
      stop
    endswitch
    
  repeat while (Lanjut menggunakan?) is (ya)
  
else (tidak)
  :Tampilkan error;
  stop
endif

stop

@enduml
