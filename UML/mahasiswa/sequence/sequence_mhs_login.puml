@startuml Sequence Diagram - Login Mahasiswa

title Sequence Diagram: Login Mahasiswa

actor Mahasiswa as mhs
participant "Halaman Login" as login
participant "Auth Controller" as auth
database "Database" as db

mhs -> login : Buka aplikasi SIMA
activate login
login --> mhs : Tampilkan form login

mhs -> login : Input NIM & Password
login -> auth : validateCredentials(nim, password)
activate auth

auth -> db : SELECT * FROM users WHERE nim = ?
activate db
db --> auth : User data
deactivate db

alt Kredensial Valid
    auth --> login : Login success
    login --> mhs : Redirect ke Beranda
else Kredensial Invalid
    auth --> login : Login failed
    login --> mhs : Tampilkan pesan error
end

deactivate auth
deactivate login

@enduml
