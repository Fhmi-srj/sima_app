start

:Mahasiswa membuka aplikasi SIMA;

:Sistem menampilkan halaman login;

:Mahasiswa memasukkan NIM dan password;

if (Kredensial valid?) then (ya)
  :Sistem memuat data profil mahasiswa;
  :Sistem mengambil jadwal hari ini;
  :Sistem mengambil status KRS terbaru;
  :Sistem mengambil tagihan aktif;
  
  :Menampilkan halaman Beranda;
  
  fork
    :Menampilkan kartu profil mahasiswa;
  fork again
    :Menampilkan jadwal kuliah hari ini;
  fork again
    :Menampilkan status KRS;
  fork again
    :Menampilkan ringkasan tagihan;
  fork again
    :Menampilkan menu cepat;
  end fork
  
  :Mahasiswa dapat memilih menu/fitur;
  
else (tidak)
  :Menampilkan pesan error;
  :Kembali ke halaman login;
endif

stop

