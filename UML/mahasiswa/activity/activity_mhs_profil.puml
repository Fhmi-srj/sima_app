@startuml Activity Diagram - Mengelola Profil

title Activity Diagram: Mengelola Profil Mahasiswa

start

:Mahasiswa tap ikon profil di top bar;

:Sistem menampilkan halaman profil;

:Menampilkan informasi profil:
- Foto profil
- Nama lengkap
- NIM
- Program Studi
- Angkatan
- Email
- No. Telepon;

:Menampilkan menu profil;

if (Mahasiswa pilih "Edit Profil"?) then (ya)
  :Sistem menampilkan form edit profil;
  
  :Field yang dapat diedit:
  - Foto profil
  - Email
  - No. Telepon
  - Alamat;
  
  if (Ubah foto profil?) then (ya)
    :Mahasiswa tap foto profil;
    :Memilih dari galeri/kamera;
    :Crop dan preview foto;
    :Menampilkan foto baru;
  else (tidak)
  endif
  
  :Mahasiswa mengubah data;
  
  :Mahasiswa tap tombol Simpan;
  
  if (Data valid?) then (ya)
    :Sistem menyimpan perubahan;
    :Menampilkan pesan sukses;
    :Kembali ke halaman profil;
  else (tidak)
    :Menampilkan error validasi;
  endif
  
else if (Mahasiswa pilih "Ubah Password"?) then (ya)
  :Sistem menampilkan form ubah password;
  
  :Mahasiswa mengisi:
  - Password lama
  - Password baru
  - Konfirmasi password baru;
  
  :Mahasiswa tap tombol Simpan;
  
  if (Password lama benar?) then (ya)
    if (Password baru = Konfirmasi?) then (ya)
      :Sistem mengubah password;
      :Menampilkan pesan sukses;
    else (tidak)
      :Menampilkan error konfirmasi tidak cocok;
    endif
  else (tidak)
    :Menampilkan error password lama salah;
  endif
  
else if (Mahasiswa pilih "Riwayat Akademik"?) then (ya)
  :Menampilkan riwayat akademik lengkap;
  
else (Logout)
  :Sistem menghapus sesi;
  :Navigasi ke halaman login;
endif

stop

@enduml
