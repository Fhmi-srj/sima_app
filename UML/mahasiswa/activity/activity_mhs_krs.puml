@startuml Activity Diagram - Mengisi KRS

title Activity Diagram: Mengisi KRS Mahasiswa

start

:Mahasiswa memilih menu Akademik;

:Mahasiswa memilih tab KRS;

:Sistem mengambil data KRS mahasiswa;

if (Status KRS = Draft?) then (ya)
  :Menampilkan daftar mata kuliah tersedia;
  :Menampilkan total SKS saat ini;
  
  repeat
    :Mahasiswa memilih mata kuliah;
    
    if (SKS mencukupi?) then (ya)
      :Menambahkan mata kuliah ke KRS;
      :Update total SKS;
    else (tidak)
      :Menampilkan pesan SKS melebihi batas;
    endif
    
    if (Ingin menghapus mata kuliah?) then (ya)
      :Mahasiswa tap tombol hapus;
      :Menghapus mata kuliah dari KRS;
      :Update total SKS;
    else (tidak)
    endif
    
  repeat while (Lanjut memilih mata kuliah?) is (ya)
  
  :Mahasiswa tap tombol Submit KRS;
  
  if (Konfirmasi submit?) then (ya)
    :Sistem menyimpan KRS;
    :Update status KRS menjadi "Pending";
    :Menampilkan pesan sukses;
    :KRS menunggu persetujuan Dosen Wali;
  else (tidak)
    :Kembali ke halaman KRS;
  endif
  
else if (Status KRS = Pending?) then (ya)
  :Menampilkan KRS yang sudah disubmit;
  :Menampilkan status "Menunggu Persetujuan";
  :Mahasiswa tidak dapat mengedit;
  
else (Approved)
  :Menampilkan KRS yang sudah disetujui;
  :Menampilkan status "Disetujui";
  :Menampilkan tanggal persetujuan;
endif

stop

@enduml
