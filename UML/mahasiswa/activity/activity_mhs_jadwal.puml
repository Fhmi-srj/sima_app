@startuml Activity Diagram - Melihat Jadwal Kuliah

title Activity Diagram: Melihat Jadwal Kuliah Mahasiswa

start

:Mahasiswa memilih menu Jadwal;

:Sistem mengambil data jadwal mahasiswa;

:Menampilkan halaman Jadwal dengan tab hari;

:Menampilkan tab hari aktif (sesuai hari ini);

repeat
  :Mahasiswa melihat jadwal pada tab aktif;
  
  if (Ingin melihat hari lain?) then (ya)
    :Mahasiswa memilih tab hari lain;
    :Sistem menampilkan jadwal hari tersebut;
  else (tidak)
  endif
  
  if (Ingin melihat detail jadwal?) then (ya)
    :Mahasiswa tap pada kartu jadwal;
    :Sistem menampilkan modal detail jadwal;
    
    :Menampilkan informasi:
    - Mata kuliah
    - Dosen pengampu
    - Waktu
    - Ruangan
    - SKS;
    
    if (Jadwal hari ini & waktu sesuai?) then (ya)
      :Menampilkan tombol Absensi;
      
      if (Mahasiswa tap Absensi?) then (ya)
        :Buka modal absensi;
      else (tidak)
      endif
    else (tidak)
    endif
    
    :Mahasiswa menutup modal;
  else (tidak)
  endif
  
repeat while (Lanjut melihat jadwal?) is (ya)

stop

@enduml
